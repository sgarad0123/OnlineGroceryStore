                <div class="row">
                    <div class="col-md-12">
                        <div class="aa-header-bottom-area">
                            <!-- logo  -->
                            <div class="header__logo">
                                <!--logo -->
                                <a href="@Url.Action("Index","Home")" class="header__logo-link img-responsive">
                                    <!-- <span class="fa fa-shopping-cart"></span> -->
