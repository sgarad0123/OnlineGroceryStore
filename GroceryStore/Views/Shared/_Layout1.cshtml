            font-size: 12px;
            font-weight: bold;
            padding: 3px 6px;
            border-radius: 50%;
            margin-left: 5px;
        }

        .aa-cartbox-summary {
            position: absolute;
            top: calc(100% + 10px);
            right: 0;
            background-color: #fff;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
            padding: 10px;
            min-width: 200px;
            z-index: 1;
            display: none;
        }

